extend layout

block content 

    h1=title 

    if items.length 
        p Please update all items below by removing #{size.name} from the stock before deleting the size.
        ul 
            for item in items 
                li
                    a(href=item.url) #{item.name}

    else 
        p Are you sure you want to delete this size?
        form(method="POST" action='')
            div.form-group
                input(type="hidden")
            button.btn.btn-primary(type="submit") Submit 
    